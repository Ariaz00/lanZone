{% extends "../layouts/base.twig" %}

{% block style %}
	<link rel="stylesheet" href="/assets/css/createLan.css">
{% endblock %}

{% block main %}

    <!-- Navigation -->
    <div class="nav-container">
        <div class="logo">
            <a href="/dashboard"><img src="/assets/img/Logo_Connexion.png" alt="Logo"></a>
        </div>
        <a href="/dashboard" class="dashboard-link">Retour au Dashboard</a>
    </div>

    <div class="createLanContainer">
        <h2>Créer une LAN</h2>
        <form action="/createLan" method="POST">
            <label for="nom">Nom de la LAN :</label>
            <input type="text" id="nom" name="nom" required>

            <label for="date">Date de la LAN:</label>
            <input type="date" id="date" name="date" required>

            <label for="lieu">Lieu :</label>
            <input type="text" id="lieu" name="lieu" required>

            <input type="hidden" id="latitude" name="latitude" readonly>
            <input type="hidden" id="longitude" name="longitude" readonly>

            <label for="description">Description :</label>
            <textarea id="description" name="description"></textarea>

            <label for="materiel">Matériel nécessaire :</label>
            <textarea id="materiel" name="materiel"></textarea>

            <label for="nb_max_participants">Nombre maximum de participants :</label>
            <input type="number" id="nb_max_participants" name="nb_max_participants" required>

            <button type="submit">Créer la LAN</button>
        </form>
    </div>

{% endblock %}
