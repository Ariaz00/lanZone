            <ul>
                {% for participation in participations %}
                    <li>{{ participation.lan.nom }} - {{ participation.lan.lieu }} ({{ participation.lan.date | date('d/m/Y') }})</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Vous ne participez √† aucune LAN.</p>
        {% endif %}
